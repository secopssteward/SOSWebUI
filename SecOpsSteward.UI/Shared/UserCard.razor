<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Image="@CurrentUser.Avatar"/>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">@CurrentUser.Name</MudText>
            <MudText Typo="Typo.caption">@CurrentUser.Email</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

@code {

    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public string Style { get; set; }

}