@using SecOpsSteward.Plugins.Configurable
<MudList Clickable="false" Dense="true">
    @foreach (var param in ParameterCollection.Parameters)
    {
        <MudListItem Dense="true">
            <ParameterEditor ReadOnly="@ReadOnly" Parameter="@param"/>
        </MudListItem>
    }
</MudList>

@code {

    [Parameter]
    public bool ReadOnly { get; set; }

    [Parameter]
    public ConfigurableObjectParameterCollection ParameterCollection { get; set; } = new();

    [Parameter]
    public EventCallback<ConfigurableObjectParameterCollection> ParameterCollectionChanged { get; set; }

}